<%= render "shared/header" %>
<div class='item-contents'>
  <div class="subtitle" >
    <%= @message %>
  </div>
  <ul class='item-lists'>
    <% @items.each do |item| %>
      <% if item.purchase == nil %>
      <li class='list'>
        <%= link_to item_path(item) do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img" %>
            <% if item.purchase != nil %>
              <div class='sold-out'>
                <span>Sold Out!!</span>
              </div>
            <% end %>

          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>å††<br><%= item.postage.text %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
        <% end %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
<%= render "shared/footer" %>