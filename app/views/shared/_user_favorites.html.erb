<div class='item-contents'>
  <div class="subtitle" >
    <%= favorite_message %>
  </div>
  <ul class='item-lists'>
    <% favorite_items.each do |item| %>
      <li class='list'>
        <%= link_to item_path(item) do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img" %>
            <% if item.purchase != nil %>
              <div class='sold-out'>
                <span>Sold Out!!</span>
              </div>
            <% end %>

          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>å††<br><%= item.postage.text %></span>
              <div class='star-btn' id="star-btn-<%= item.id %>">
              <%= render "shared/star_btn", item: item %>
              </div>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>